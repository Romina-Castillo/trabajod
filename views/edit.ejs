<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="./"><img src="img/images.png" alt="Gobierno de Mendoza" class="nav-icon"></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="./">Home</a>
          </li>
      
        </ul>
        <form class="d-flex" action="./search" method="GET">
          <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar" name="search">
          <button class="btn secondary-btn" type="submit">Buscar</button>
        </form>
      </div>
    </div>
  </nav>
  <br>
  <div class="container">
    <div class="text-center">
    <h2>Paciente</h2>
    </div>
    <br>
    <form action="./updateUser" method="POST">
        <input type="hidden" name="id" value="<%= user.id %>">    
        <div class="row">
        <div class="col-6">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" name="nombre" id="nombre" class="form-control" value="<%= user.nombre %>">
        </div>
        <div class="col-6">
            <label for="apellido" class="form-label">Apellido</label>
            <input type="text" name="apellido" id="apellido" class="form-control" value="<%= user.apellido %>">
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-6">
            <label for="caso" class="form-label">Caso</label>
            <input type="text" name="role" id="caso" class="form-control" value="<%= user.caso %>">
        </div>
    </div>
    <br>
    <div class="col-6">
        <label for="barrio" class="form-label">Barrio</label>
        <select name="barrio" id="barrio" class="form-select">
            <option value="<%= user.barrio %>" selected>
                <%= user.barrio %>
            </option>
            <option value="B">Bastias</option>
            <option value="CC">Ca√±a colorada</option>
            <option value="I">Intendentes</option>
            <option value="MG">Martin Guemes</option>
            <option value="MA">Malvinas Argentinas</option>
            <option value="VM">Villa del Milagro</option>
        </select>
    <br>
    </div>
    <div class="row">
        <div class="col-6">
        <label for="calle" class="form-label">Calle</label>
        <input type="text" name="calle" id="calle" class="form-control" value="<%= user.calle %>">
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-6">
            <div class="float-start">
                <button type="submit" class="btn primary-btn">Actualizar</button>        </div>
        </div>
        <div class="col-6">
            <div class="float-end">
            <a href="./" class="btn secondary-btn">Volver a inicio</a>
        </div>
        </div>
    </div>
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
